<%= form_for @comment, url: comments_path, remote: true do |f| %>
  <%= f.hidden_field :article_id, value: @article.id %>
  <% if current_user %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  <% end %>
  <br/>
  <%= f.label :comment %>
  <%= f.text_area :content, class:"form-control text-center", placeholder:"text comment here ..." %>
  <%= f.submit :Submit, class:"btn btn-primary btn-raised"%>
<% end %>
