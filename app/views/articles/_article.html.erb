<div class="col-md-4 blog-main box block" id="article_<%= article.id %>">
  <div class="panel panel-info ">
    <div class="panel panel-heading">
      <h3 class="panel-title"><%= article.title %></h3>
    </div>
    <div class="panel-body">
      <p><%= article.content %></p>
      <div style="color: #3BB2D6;"><%= time_ago_in_words(article.created_at) %></div>
      <br>
      <hr>
      <div class="panel panel-heading">
        <h3>Comments</h3>
        <% article.comments.each do |comment| %>
          <%= comment.content %>
          <br/>
        <% end %>
      </div>
      <br>
      <div class="btn-group", role="group", aria-label="...">
        <td><%= link_to 'Edit', edit_article_path(article.id), class: "btn btn-default" %></td>
        <td><%= link_to "Show", article_path(article.id), class: "btn btn-default" %></td>
        <td><%= link_to "Delete", article_path(article.id), method: "DELETE", remote: true, class: "btn btn-danger" %></td>
      </div>
    </div>
  </div>
</div>
<!-- Modal -->
<br>
<%= javascript_include_tag 'bootstrap' %>